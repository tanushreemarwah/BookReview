
	<h2 class="current-category"><%= params[:category] %></h2>
	<% if @books.count == 0 %>
		<h4>Sorry! There are no books currently in this category. <br> Be the first one to <%= link_to "add a book", new_book_path %> ! </h4>
	<% else %>
		<div class="row">
			<% @books.each do |book| %>
				<div class="col-md-4">
					<a href="/books/<%= book.id %>">
						<%= image_tag book.avatar.url(:book_index), class: "book" %>
					</a>
				</div>
			<% end %>
		</div>
<% end %>




